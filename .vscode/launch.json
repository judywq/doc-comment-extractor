    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "--input_folder", "data/input/samples",
                "--output_folder", "data/output",
                "--start_token", "Human feedback:",
                "--end_token", "Feedback on topic responsiveness:",
                "--out_formats", "json,xml"
            ]
        },
        {
            "name": "Python Debugger: Current File with Arguments 1",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "--input_folder", "data/input/tests",
                "--output_folder", "data/output",
                "--out_formats", "json,xml"
            ]
        }
    ]
}